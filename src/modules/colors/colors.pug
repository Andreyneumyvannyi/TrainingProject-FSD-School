include ../utils/pug/mixins
include ../ui-logo/ui-logo.pug

.colors-wrapper
  .wrapper__color
    +palette('Dark Shade 100%', '#1F2041', '100')
    +palette('Dark Shade 75%', '#1F2041', '75')
    +palette('Dark Shade 50%', '#1F2041', '50')
    +palette('Dark Shade 25%', '#1F2041', '25')
    +palette('Dark Shade 5%', '#1F2041', '5')
    +palette('Purple', '#1F2041', 'purple')
    +palette('Green', '#6FCF97', 'green')
  .wrapper__headline
    .description
      .description__name.description__name--h1 H1
      .description__text.description__text--h1 This one is the sub-section or widget title
    .description
      .description__name.description__name--h2 H2
      .description__text.description__text--h2 Next one is the item title inside widgets
    .description
      .description__name.description__name--h3 H3
      .description__text.description__text--h3 This is a label or CTA text
    .description
      .description__name.description__hame--body Body
      .description__text.description__text--body This is the body text which is used for most of the design, like paragraphs, lists, etc.