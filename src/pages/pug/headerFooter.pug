doctype html
html(lang='en')
  head
    title
      | HeaderFooter
  
  body.body_gray

    //- Includes
    include ../../components/header/header
    include ../../components/footer/footer
    include ../../components/logo/logo

    // Logo
    .component__logo
      +logo("gray")


    // Header
    .component__header
      - let arrLink = ["О нас", "Услуги", "Вакансии", "Новости", "Соглашения"]
      - let arrowPos = ["Услуги","Соглашения"]
      +header("standard", arrLink, arrowPos, "Войти", "Зарегистрироваться")
    

    // Header-account
    .component__header-account
      +header("login", arrLink, arrowPos)


    // Footer
    .component__footer
      //-Data footer
      - let contentText = "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
      - let arrLinkNavigation = ["навигация", "О нас", "Новости", "Служба поддержки", "Услуги"]
      - let arrLinkAbout = ["О нас", "О сервисе", "Наша команда", "Вакансии", "Инвесторы"]
      - let arrLinkSupport = ["Служба поддержки", "Соглашения", "Сообщества", "Связь с нами"]
      - let subscribeTitle = "Подписка"
      - let subscribeText = "Получайте специальные предложения и новости сервиса"
      - let subscribePlaceholder = "Email"
      - let copyright = "Copyright © 2018 Toxin отель. Все права зачищены."
      +footer(contentText, arrLinkNavigation, arrLinkAbout, arrLinkSupport, subscribeTitle, subscribeText, subscribePlaceholder, copyright)
    

    // Footer-social
    .component__footer-social
      include ../../components/footer/footer_social